:root
  --header-height 5em
  --footer-height 5em

#app
  min-height 100vh

header
  background rgba(red, 0.15)
  height var(--header-height)

.app-main
  display flex

  width 100vw
  height calc(100vh - (var(--header-height) + var(--footer-height)))



footer
  background rgba(black, 0.15)
  height var(--footer-height)
